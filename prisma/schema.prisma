generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url = env("DATABASE_URL")
  relationMode = "prisma"
}

model Question {
  id         String      @id @default(cuid())
  authorId   String
  createdAt  DateTime @default(now())
  isSolved   Boolean  @default(false)
  title      String
  details    String?   @db.VarChar(255)

  @@unique([authorId, title])
}